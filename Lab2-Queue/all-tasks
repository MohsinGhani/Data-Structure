// ConsoleApplication2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>

using namespace std;

int maxSize = 6;
int queue[6];
int front = 0;
int rear = -1;
int item;

bool enqueue(){
	for (int i = front; i <= maxSize; i++){
		if (rear >= maxSize - 1){
			std::cout << "Queue is Full!\n";
			return false;
		}
		else{	
			rear = rear + 1;
			cout << "Enter the item at index " << i << ": ";
			cin >> item;
			queue[rear] = item;
		}
	}
	return true;
}

bool dequeue() {
	if(front > rear) {
		std::cout << "Queue is Empty\n";
		return false;
	}
	else {
		item = queue[front];
		front = front + 1;		
		return true;
	}
}

bool diplay(){
	if(front > rear){
		std::cout << "Queue is Empty\n";
	}
	else{
		for (int i = rear; i >= front; i--){
			std::cout << queue[i] << "\t";
		}
		std::cout << "\n";
	}
	return false;
}

bool search(int searchItem){
	bool flag = false;
	for(int i = front; i <= rear; i++){
		if(queue[i] == searchItem) {
			std::cout << searchItem << " is exist in Queue. \n";
			flag = true;
		}
	}
	if(!flag){
			std:: cout << "Searching Faild: Number does not exist in queue! \n";
		}
	return true;
}

int _tmain(int argc, _TCHAR* argv[])
{
	mainhome:
	int option;
	std::cout << "Enter 1 for Equeue and 2 for Disply: ";
	std::cin >> option;
	switch (option){
		case 1:
		enqueue();
		goto mainhome;
		break;

		case 2:
		diplay();
		goto mainhome;
		break;

		case 3:
		dequeue();
		std::cout << "Dequeue Item = " << item << "\n";
		goto mainhome;
		break;

		case 4:
		int searchItem;
		std::cout << "Enter a Number for search: ";
		std::cin >> searchItem;
		search(searchItem);
		goto mainhome;
		break;
	}
	return 0;
}

